@using Korisnik.ViewModel
@model CreateRole_ViewModel

@{ 
    ViewBag.Title = "Create New Role";
}
<h2>Creating Role</h2>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create Role</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancle</a>
        </form>
    </div>
</div>