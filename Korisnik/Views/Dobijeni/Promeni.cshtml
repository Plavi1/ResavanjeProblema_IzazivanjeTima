@using Korisnik.ViewModel.Enum
@model Promeni_ViewModel

@{
    ViewBag.Title = "Promeni";
}

<h1>Promeni Izazov</h1>


<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="ImeIzazivaoca" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ImeIzazivaoca" disabled class="form-control">
            <input hidden asp-for="ImeIzazivaoca" value="@Model.ImeIzazivaoca" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Mesto" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="Mesto"
                    asp-items="Html.GetEnumSelectList<Mesta>()">
                <option value="">Selektuj Mesto</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="date" class="col-sm-2 col-form-label">Datum: </label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ZakazanDatum" value="@Model.ZakazanDatum" type="date" />
        </div>
    </div>
    <div class="form-group row">
        <label for="time" class="col-sm-2 col-form-label">Vreme: </label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ZakazanoVreme" value="@Model.ZakazanoVreme" type="time" />
        </div>
        <span asp-validation-for="ZakazanoVreme" class="text-danger"></span>
        <span asp-validation-for="ZakazanDatum" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input hidden asp-for="IdIzazova" value="@Model.IdIzazova" />
            <input hidden asp-for="IdIzazivaoca" value="@Model.IdIzazivaoca" />
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

